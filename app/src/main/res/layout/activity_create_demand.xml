<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".CreateDemandActivity"
    tools:showIn="@layout/activity_create_demand">

  <GridLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

      <EditText
          android:id="@+id/dem_title"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="@string/dem_title"
          android:inputType="text" />

      <EditText
          android:id="@+id/dem_description"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="@string/dem_description"
 />

      <EditText
          android:id="@+id/dem_street"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="@string/dem_street"
 />
      <EditText
          android:id="@+id/dem_postal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="@string/dem_postal"
          />

      <LinearLayout
          android:layout_height="wrap_content"
          android:layout_width="match_parent"
          android:orientation="horizontal"
          >


          <EditText
              android:id="@+id/dem_date"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight=".40"
             android:hint="@string/dem_date"
              android:inputType="date"

              />

          <EditText
              android:id="@+id/dem_time"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight=".40"
              android:hint="@string/dem_time"
              android:inputType="time"
              />
      </LinearLayout>



      <Button
          android:id="@+id/dem_button_ok"
          android:text="@string/create_demand"
          android:textAlignment="center"
          android:layout_gravity="center_vertical|center_horizontal"
          />
  </GridLayout>




    </android.support.constraint.ConstraintLayout>


